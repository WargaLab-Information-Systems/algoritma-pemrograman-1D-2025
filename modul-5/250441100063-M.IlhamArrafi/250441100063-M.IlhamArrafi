def faktorial(n):
    hasil = 1
    print("Proses: ", end="") 

    for i in range(n, 0, -1): 
        print(i, end="") 
        if i > 1:
            print(" x ", end="")
        hasil = hasil * i

    print(" =", hasil)  
    return hasil

angka = int(input("Masukkan angka: "))
faktorial(angka)


