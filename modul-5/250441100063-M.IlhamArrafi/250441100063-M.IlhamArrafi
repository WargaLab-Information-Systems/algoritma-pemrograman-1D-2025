# Soal 3: Fungsi menghitung gaji bersih karyawan

def hitung_gaji(nama, jabatan, gaji_pokok):
    pph = 0.05 * gaji_pokok  # Pajak 5%
    
    if jabatan.lower() == "manager":
        tunjangan = 0.10 * gaji_pokok
    elif jabatan.lower() == "staff":
        tunjangan = 0.05 * gaji_pokok
    else:
        tunjangan = 0
    
    gaji_bersih = gaji_pokok - pph + tunjangan
    return gaji_bersih, pph, tunjangan


# Input data
nama = input("Masukkan nama karyawan: ")
jabatan = input("Masukkan jabatan (Manager/Staff): ")
gaji_pokok = float(input("Masukkan gaji pokok: "))

# Hitung gaji
gaji_bersih, pajak, tunjangan = hitung_gaji(nama, jabatan, gaji_pokok)

# Tampilkan hasil
print("\n=== HASIL PERHITUNGAN GAJI ===")
print(f"Nama: {nama}")
print(f"Jabatan: {jabatan}")
print(f"Gaji Pokok: Rp{gaji_pokok:,.2f}")
print(f"Pajak (5%): Rp{pajak:,.2f}")
print(f"Tunjangan: Rp{tunjangan:,.2f}")
print(f"Gaji Bersih: Rp{gaji_bersih:,.2f}")

# Info tambahan
if pajak > 0:
    print("\nKaryawan dikenakan pajak sebesar 5% dari gaji pokok.")